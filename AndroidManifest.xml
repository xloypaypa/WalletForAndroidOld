<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.walletforandroid"
    android:versionCode="1"
    android:versionName="1.3.3" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FirstActivity"
            android:label="@string/title_activity_first" >
        </activity>
        <activity
            android:name=".TypeActivity"
            android:label="@string/title_activity_type" >
        </activity>
        <activity
            android:name=".DebtActivity"
            android:label="@string/title_activity_debt" >
        </activity>
        <activity
            android:name=".DebtAddActivity"
            android:label="@string/title_activity_debt_add" >
        </activity>
        <activity
            android:name=".DebtDetailActivity"
            android:label="@string/title_activity_debt_detail" >
        </activity>
        <activity
            android:name=".DebtRepayActivity"
            android:label="@string/title_activity_debt_repay" >
        </activity>
        <activity
            android:name=".DetailActivity"
            android:label="@string/title_activity_detail" >
        </activity>
        <activity
            android:name=".StateActivity"
            android:label="@string/title_activity_state" >
        </activity>
        <activity
            android:name=".UseActivity"
            android:label="@string/title_activity_use" >
        </activity>
        <activity
            android:name=".ReasonActivity"
            android:label="@string/title_activity_reason" >
        </activity>
        <activity
            android:name=".ReasonStateActivity"
            android:label="@string/title_activity_reason_state" >
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".ReasonAddActivity"
            android:label="@string/title_activity_reason_add" >
        </activity>
        <activity
            android:name=".ReasonChangeActivity"
            android:label="@string/title_activity_reason_change" >
        </activity>
        <activity
            android:name=".WebActivity"
            android:label="@string/title_activity_web" >
        </activity>

        <service
            android:name=".WebServer"
            android:permission="android.permission.INTERNET" >
            <intent-filter>
                <action android:name="com.example.walletforandroid.WebServer" />
            </intent-filter>
        </service>

        <activity
            android:name=".TransferActivity"
            android:label="@string/title_activity_transfer" >
        </activity>
    </application>

</manifest>
